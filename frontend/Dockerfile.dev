# frontend/Dockerfile.dev
FROM node:20-alpine

WORKDIR /app

# Instalar dependencias
COPY package*.json ./
RUN npm install

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto de Vite
EXPOSE 9002

# Variable de entorno para el backend
ENV NEXT_PUBLIC_API_URL=http://localhost:3000

# Comando de desarrollo
CMD ["npm", "run", "dev"]